<body>
    <p id="notice"></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><span><%= book.title %></span></td>
        <td><span><%= book.body %></span></td>
       <td><%= link_to "Show", book_path(book) %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
    <td><%= link_to "Destroy",book_path(book), method: :delete,  data: {confirm: "Are you sure?"} %></td>
      </tr>
      <% end %>
</table>


<h2>New book</h2>
<%= form_with model: @book, local:true do |f| %>
<h3>Title</h3>
<%= f.text_field :title %>
<h3>Body</h3>
<%= f.text_area :body %>
<p><%= f.submit 'create Book' %></p>
<% end %>
</body>
